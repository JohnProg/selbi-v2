{
	"rules": {
	    "users" : {
	    	"$uid" : {
	    		".write": "$uid === auth.uid",
                ".read": "auth.uid != null",

	    		 ".validate": "newData.hasChildren(['name', 'email'])",

	    		"name": {
                    "first": {
                      ".validate" : "newData.isString()"
                    },
                    "last": {
                      ".validate" : "newData.isString()"
                    }
	    		},

	    		// TODO: Validate email is valid as well.
	    		"email": {
	    			".validate" : "newData.isString()"
	    		}
	    	}
	    }
  	}
}
